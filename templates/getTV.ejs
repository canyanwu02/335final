<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Result</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Here's the information about your favorite TV show!!</h1><br>
    <% tvShows.forEach(tvShowArray => { %>
        <% tvShowArray.forEach(tvShow => { %>
            <div>
                <h2><%= tvShow.name %></h2>
                <p>Original Name: <%= tvShow.original_name %></p>
                <p>Genres: <%= tvShow.genre_ids.join(', ') %></p>
                <p>First Air Date: <%= tvShow.first_air_date %></p>
                <p>Release Date: <%= tvShow.first_air_date %></p>
                <p>Rating: <%= tvShow.vote_average %> (Votes: <%= tvShow.vote_count %>)</p>
                <p>Plot Summary: <%= tvShow.overview %></p>
                <% if (tvShow.poster_path) { %>
                    <img src="https://image.tmdb.org/t/p/w500<%= tvShow.poster_path %>" alt="<%= tvShow.name %> Poster">
                <% } else { %>
                    <p>No image available</p>
                <% } %>
            </div>
        <% }); %>
    <% }); %>
    <a href="/">HOME</a>
</body>


</html>


